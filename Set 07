# Create dataset
customer_data <- data.frame(
  CustomerID = c(1, 2, 3),
  Age = c(28, 35, 42),
  Gender = c("Female", "Male", "Female"),
  Income = c(50000, 60000, 75000)
)

# Bar chart of Ages
barplot(customer_data$Age,
        names.arg = customer_data$CustomerID,
        col = c("pink", "lightblue", "pink"),  # colors for gender
        main = "Distribution of Customer Ages",
        xlab = "Customer ID",
        ylab = "Age")
# Count genders
gender_count <- table(customer_data$Gender)

# Pie chart
pie(gender_count,
    labels = paste(names(gender_count), gender_count),
    col = c("pink", "lightblue"),
    main = "Customer Distribution by Gender")
