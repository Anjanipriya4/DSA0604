# Dataset
employee_id <- 1:5
department <- c("Sales","HR","Marketing","Sales","HR")
years <- c(5,3,7,4,2)
performance <- c(85,92,78,90,76)

# 1. Line chart – performance trend
plot(years, performance, type="o", col="blue",
     main="Employee Performance Over Time",
     xlab="Years of Service", ylab="Performance Score")

# 2. Bar chart – employees per department
dept_count <- table(department)
barplot(dept_count, col="orange", main="Employees by Department")

# 3. Scatter plot – Years vs Performance
plot(years, performance, pch=19, col="red",
     main="Years of Service vs Performance",
     xlab="Years of Service", ylab="Performance Score")
